<?xml version="1.0" encoding="utf-8"?> <androidx.coordinatorlayout.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/selected_image"
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:layout_margin="16dp"
        android:adjustViewBounds="true" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pick_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="500dp"
        android:text="pick image" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/face_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="450dp"
        android:layout_marginStart="200dp"
        android:text="find a face" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/take_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="500dp"
        android:layout_marginStart="200dp"
        android:text="take photo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rotate_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pick_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:text="rotate image" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_slider"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="630dp"
        android:valueFrom="0"
        android:valueTo="360"
        android:stepSize="1"
        app:layout_anchorGravity="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/scale_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/take_photo_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:layout_marginStart="200dp"
        android:text="scale image" />

    <EditText
        android:id="@+id/scaleFactorEditText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:hint="Scale Factor"
        android:layout_marginTop="670dp"
        android:layout_marginStart="200dp"
        android:inputType="numberDecimal"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pick_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="670dp"
        android:text="save image" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>