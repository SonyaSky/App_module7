<?xml version="1.0" encoding="utf-8"?>


<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/horizontalscrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/invert"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/inversionButton" />

        <ImageButton
            android:id="@+id/gray"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/grayscaleButton" />

        <ImageButton
            android:id="@+id/bnw"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/BlackAndWhiteButton" />

        <ImageButton
            android:id="@+id/dark"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/darkButton" />

        <ImageButton
            android:id="@+id/light"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/lightButton" />

        <ImageButton
            android:id="@+id/sepia"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/sepiaButton" />

        <ImageButton
            android:id="@+id/yellow"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/yellowButton" />

        <ImageButton
            android:id="@+id/sage"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/sageButton" />

        <ImageButton
            android:id="@+id/orange"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/orangeButton" />

        <ImageButton
            android:id="@+id/pink"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/pinkButton" />

        <ImageButton
            android:id="@+id/purple"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/purpleButton" />

        <ImageButton
            android:id="@+id/blue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/blueButton" />

        <ImageButton
            android:id="@+id/red"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/redButton" />

        <ImageButton
            android:id="@+id/green"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/greenButton" />
    </LinearLayout>

</HorizontalScrollView>

