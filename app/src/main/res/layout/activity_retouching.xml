<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RetouchingActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/btns_for_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_btn"
            style="@style/ButtonStyle"
            android:minWidth="@dimen/mini_margin"
            app:icon="@drawable/arrow_back"/>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/approve_btn"
            style="@style/ButtonStyle"
            android:minWidth="@dimen/mini_margin"
            app:icon="@drawable/tick"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_size"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.208"/>

        <com.example.module7.RetouchView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_size"
            android:layout_margin="@dimen/main_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.208" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/mini_margin"
        android:layout_marginRight="@dimen/mini_margin">

        <TextView
            android:id="@+id/text1"
            style="@style/TextViewStyle"
            android:text="@string/brush_size" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/brushSize"
            style="@style/RangeSlider"
            android:max="100"
            android:min="1"
            android:splitTrack="false" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/mini_margin"
        android:layout_marginRight="@dimen/mini_margin">

        <TextView
            android:id="@+id/text2"
            style="@style/TextViewStyle"
            android:text="@string/coefficient" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/brush_transparent"
            style="@style/RangeSlider"
            android:max="100"
            android:min="1"
            android:splitTrack="false" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clearButton"
        style="@style/ButtonStyle"
        android:text="@string/clearButton" />


</LinearLayout>