<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/mini_margin</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="backgroundTint">#ffa62c</item>
        <item name="iconSize">@dimen/icon_size</item>
    </style>

    <style name="ColorButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:text">""</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="RangeSlider" parent="Widget.MaterialComponents.Slider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:stepSize">1</item>
        <item name="thumbColor">@color/thumb_color</item>
    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/textview_text</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>